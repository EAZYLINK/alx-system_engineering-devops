#!/usr/bin/env bash
# installs nginx and configures it on a remote server

sudo apt update
sudo apt install nginx
sudo ufw allow 'Nginx HTTP'
sudo service start nginx
sudo mkdir -p /var/www/eazylinktechnology.tech/html
sudo chown -R $USER:$USER /var/www/eazylinktechnology.tech/html
sudo chmod -R 755 /var/www/eazylinktechnology.tech
echo 'Hello World!' > /var/www/eazylinktechnology.tech/html/index.nginx-debian.html
sudo service restart nginx
